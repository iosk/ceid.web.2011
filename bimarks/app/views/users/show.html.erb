<! This is the sidebar for the profile page of the user !>
<table class="profile" summary="Profile information">
  <tr>
    <td class="main">
      <h1>
        <%= @user.username %>
      </h1>
    </td>
    <td class="sidebar round">
	<strong>Name</strong> <%= @user.username %><br />
	<strong>URL</strong>  <%= link_to user_path(@user), @user %><br/>
 	<strong>Submitted bookmarks</strong> <%= @my_bookmarks.count %>

    </td>
  </tr>
</table>



	<table>
	<caption>Most Recently Submitted Bookmarks</caption>
	  <tr>
	    <th>Title</th>
	    <th>Url</th>
	    <th>Submitted by</th>
	  </tr>

	<!-- This code has to be replaced by views/bookmarks/_bookmark.html.erb -->
	<% @my_bookmarks.each do |bookmark| %>

	    <td><%= link_to bookmark.title, bookmark %></td>
	    <td><a href="http://<%=bookmark.url %>" target="_blank"><%= bookmark.url %></a></td>
	    <td><%= bookmark.user.username %></td>
	    <td><%= link_to "delete", bookmark, :method => :delete,
                                     :confirm => "Fo' real?",
                                     :title => bookmark.title %>
	  </tr>
	<% end %>
	<!-- The above code should be replaced by views/bookmarks/_bookmark.html.erb -->
	</table>


