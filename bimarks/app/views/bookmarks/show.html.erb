<html>
<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @bookmark.title %>
</p>

<p>
  <b>Url:</b>
  <a href="http://<%= @bookmark.url %>" target="_blank"> <%= @bookmark.url %></a>
</p>

<p>
  <b>Q review:</b>
  <%= @bookmark.q_review %>
</p>

<p>
  <b>Submitted at:</b>
  <%= @bookmark.created_at %>
</p>
<!-- Only the owner can delete a bookmark -->

<% if current_user?(@bookmark.user) %>
<%= link_to 'Edit', edit_bookmark_path(@bookmark) %> |<% end%>
<%= link_to 'Back', bookmarks_path %>
