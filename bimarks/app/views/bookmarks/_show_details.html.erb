<HTML>

<p>
  <b>Title:</b>
  <%= @bookmark.title %>
</p>

<p>
  <b>Url:</b>
  <a href="<%= @bookmark.url %>" target="_blank"> <%= @bookmark.url %></a>
</p>

<p>
  <b>Submitted by:</b>
  <%= link_to @bookmark.user.username,  @bookmark.user %>
</p>

<p>
  <b>Q review:</b>
  <%= @bookmark.q_review %>
</p>

<p>
  <b>Submitted:</b>
  <%= time_ago_in_words(@bookmark.created_at) %> ago.
</p>
<p>
  <b>Last edited:</b>
  <%= time_ago_in_words(@bookmark.updated_at) %> ago.
</p>
<p>
  <b>Tagged as:</b><br/>
  <% for tag in @bookmark.tags %>
    <!-- This here is a fucking hack, I should better try and fix it ;) -->
    <%= link_to tag.name, tag, :remote => false %>
  <% end %> 
</p>

<p id="ajax_links"><% if @bookmark.flagged %>
      This bookmark is marked as offensive
   <% else %>
      <%= link_to "Flag it!", flag_bookmark_path(@bookmark), :method => :post, :remote => 'true' %>
   <% end%>
</p>
