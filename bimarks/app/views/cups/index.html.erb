<h1>Listing cups</h1>

<table>
  <tr>
    <th>Size</th>
    <th>Colour</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cups.each do |cup| %>
  <tr>
    <td><%= cup.size %></td>
    <td><%= cup.colour %></td>
    <td><%= link_to 'Show', cup %></td>
    <td><%= link_to 'Edit', edit_cup_path(cup) %></td>
    <td><%= link_to 'Destroy', cup, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

